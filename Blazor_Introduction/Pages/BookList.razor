@page "/BookList"
@inherits BookListBase

<h3>Daftar Buku</h3>


@if (Books == null)
{
    <p><em>Data tidak tersedia</em></p>
}
else
{
    //Detail Sintaks pada lampiran
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id Buku</th>
                <th>Judul</th>
                <th>Penulis</th>
                <th>Penerbit</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Books)
            {
                <tr>

                    <td><img src="@($"images/{book.Gambar}")" class="rounded-circle" width="100" height="100" /></td>
                    <td>@book.ID</td>
                    <td>@book.Judul</td>
                    <td>@book.Penulis</td>
                    <td>@book.Penerbit</td>
                    <td>
                        <a href="@($"bookdetail/{book.ID}")" class="btn btn-primary table-btn">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}