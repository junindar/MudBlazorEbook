@using Color = MudBlazor.Color
<EditForm Model="@searchModel" OnValidSubmit="SearchAsync">
    <div class="home-page-filters-wrapper" style="@Style">
        <div class="home-page-filters">
            <div class="home-page-filter-button">
                <button type="submit" class="search-button">Search</button>
            </div>
            <InputText @bind-Value="searchModel.SearchString" type="text" name="q" id="q" 
                       class="home-page-filter-input-search" placeholder="Keyword" />
            
         
        </div>
    </div>
</EditForm>

<style>



    .home-page-filters-wrapper {
        position: relative;
        z-index: 1;
        margin-top: -20px;
        background-color: rgba(0, 0, 0, 0.5);
        box-shadow: 0 -1px 0 rgb(255 255 255 / 25%);
        padding: 10px 0;
    }

    input.home-page-filter-input-search {
        height: 46px;
        font: normal 12px Arial, Helvetica, sans-serif;
        border: 1px solid #461515;
        background-color: #f5f5f5;
        width: 80%;
    }

    .home-page-filters {
        width: 860px;
        padding-right: 30px;
        padding-top: 10px;
        padding-bottom: 10px;
        margin: auto;
        transform: scale(1.2);
    }

    .home-page-filter-button {
        float: right;
        margin: 0;
    }

        .home-page-filter-button .search-button {
            height: 46px;
            font-size: 13px;
            line-height: 46px;
        }

        .home-page-filter-button .search-button {
            position: relative;
            border: 0;
            display: inline-block;
            /*  height: 40px;*/
            background-color: #c03;
            vertical-align: middle;
            padding: 0 12px;
            font: normal 15px/40px Arial, Helvetica, sans-serif;
            color: #fff;
            text-transform: uppercase;
            margin-right: 41px;
        }

            .home-page-filter-button .search-button:after {
                content: '';
                position: absolute;
                top: 0;
                bottom: 0;
                left: 100%;
                width: 40px;
                margin-left: 1px;
                background: #c03 url(/images/filter-button.png) no-repeat center;
            }

    .home-page-filter-input-search {
        width: 500px;
        height: 34px;
        display: block;
        box-sizing: border-box;
        border: 3px solid #c03 !important;
        padding-left: 10px;
        float: right;
        background-color: #ececec;
    }
</style>