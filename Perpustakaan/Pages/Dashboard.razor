@layout MainLayout
@page "/Dashboard"
@attribute [Authorize(Roles = "Admin,Staff")]
<MudGrid>
    <MudItem md="6">
        <MudCard Outlined="true">
            <MudCardContent>
                <MudText></MudText>
                <ApexCharts.ApexChart TItem="BookVM" Options="options"
                                          Title="Book by Category">

                        <ApexPointSeries TItem="BookVM"
                                     Items="_bookList"
                                         Name="Number of Book"
                                         XValue="@(e => e.Category.Nama)"
                                         YAggregate="@(e=> e.Count())"
                                         SeriesType="SeriesType.Bar" />


                    </ApexCharts.ApexChart>

              

            </MudCardContent>
        </MudCard>
